{
    "gitbook":">=3.0.0",
    "root":"doc",
    "title":"SEIMS Documentation Version 2018",
    "description":"",
    "author":"Liang-Jun Zhu",
    "plugins": ["-lunr", "-search", "search-plus", "versions-select", "splitter",
                "-sharing", "sharing-plus",
                "tbfed-pagefooter", "expandable-chapters-small",
                "simple-page-toc", "anchor-navigation-ex",
                "copy-code-button"],
	"pluginsConfig": {
        "versions": {
            "gitbookConfigURL": "https://github.com/crazyzlj/SEIMS_doc/blob/master/book.json",
            "options": [
                {
                    "value": "../en",
                    "text": "English",
                    "selected": true
                },
                {
                    "value": "../zh-cn",
                    "text": "简体中文"
                }
            ]
        },
        "sharing": {
            "douban": false,
            "facebook": true,
            "google": true,
            "hatenaBookmark": false,
            "instapaper": false,
            "line": false,
            "linkedin": false,
            "messenger": false,
            "pocket": false,
            "qq": true,
            "qzone": true,
            "stumbleupon": false,
            "twitter": true,
            "viber": false,
            "vk": false,
            "weibo": true,
            "whatsapp": false,
            "all": [
                "facebook", "google", "twitter",
                "weibo", "qq", "qzone"
            ]
        },
        "tbfed-pagefooter": {
            "copyright":"Copyright &copy Lreis, IGSNRR, CAS, 2018",
            "modify_label": "Last update: ",
            "modify_format": "YYYY-MM-DD HH:mm:ss"
        },
        "simple-page-toc": {
            "maxDepth": 3,
            "skipFirstH1": true
        },
        "theme-default": {
            "showLevel": true
        },
        "anchor-navigation-ex": {
            "showLevel": false,
            "associatedWithSummary": false,
            "printLog": false,
            "multipleH1": true,
            "mode": "float",
            "float": {
                "showLevelIcon": false,
                "level1Icon": "fa fa-hand-o-right",
                "level2Icon": "fa fa-hand-o-right",
                "level3Icon": "fa fa-hand-o-right"
            },
            "pageTop": {
                "showLevelIcon": false,
                "level1Icon": "fa fa-hand-o-right",
                "level2Icon": "fa fa-hand-o-right",
                "level3Icon": "fa fa-hand-o-right"
            }
        },
        "extension":"pdf",
        "pdf": {
            "toc":true,
            "pageNumbers": true,
            "fontSize": 12,
            "paperSize": "a4",
            "margin": {
                "right": 62,
                "left": 62,
                "top": 36,
                "bottom": 36
                }
        }
    }
}
